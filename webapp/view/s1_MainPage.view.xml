<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.nttdata.sap.training2022.mog.ca.appdemo1.controller.s1_MainPage">
    <Page id="page" title="{i18n>title}" class="sapUiResponsiveContentPadding">
        <List
            id="listCustomers"
            items="{
                path: '/data/customers',
                model: 'myData',
                sorter: [{
                    path: 'name', 
                    descending: true
                }], 
                filters: {
                    and: false,
                    filters: [{
                        path: 'adress/country', 
                        operator: 'EQ', 
                        value1: 'BR'
                    }, 
                    {
                        path: 'adress/country', 
                        operator: 'EQ', 
                        value1: 'US'
                    }]
                }
            }">
            <headerToolbar>
                <Toolbar>
                        <Title
                            text="{i18n>title}"
                        />
                        <ToolbarSpacer />
                        <Button text="{i18n>s1.button.listAction}" 
                            type="Emphasized"
                            press=".onListAction" />
                </Toolbar>
            </headerToolbar>
            <ObjectListItem title="{myData>name}">
                <attributes>
                    <ObjectAttribute
                        text="{myData>id}" />
                </attributes>
                <firstStatus>
                    <ObjectStatus
                        text="{
                            path: 'myData>adress/region', 
                            type: 'sap.ui.model.type.String'
                        }"
                        state="{
                            parts: [{ path: 'myData>adress/region' }, { path: 'myData>adress/country' }], 
                            formatter: '.oFormatter.formatValueState'
                        }" />
                </firstStatus>
            </ObjectListItem>
        </List>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button type="Transparent" text="Next Page" press=".onNextPress"/>
                <Button type="Accept" text="Aprovar" press=".onApprovePress" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>