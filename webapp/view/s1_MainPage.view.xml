<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    controllerName="com.nttdata.sap.training2022.mog.ca.appdemo1.controller.s1_MainPage">
    <Page id="page" title="{i18n>title}" 
        busy="{s1Model>/busy}" busyIndicatorDelay="{s1Model>/delay}"
        class="sapUiResponsiveContentPadding">
        <IconTabBar
            selectedKey="{s1Model>/iconTab/selectedKey}"  
        >            
            <items>
                <IconTabFilter
                    icon="sap-icon://action"
                    iconColor="Positive"
                    key="jsonModel" />
                <IconTabFilter
                    icon="sap-icon://add-activity"
                    iconColor="Negative"
                    key="odataModel" />
            </items>
            <content>                            
                <core:Fragment fragmentName="com.nttdata.sap.training2022.mog.ca.appdemo1.view.fragments.s1.ListCustomers" type="XML"/>  
                <core:Fragment fragmentName="com.nttdata.sap.training2022.mog.ca.appdemo1.view.fragments.s1.TableCustomers" type="XML"/>  
            </content>
        </IconTabBar>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button type="Transparent" text="Next Page" press=".onNextPress"/>
                <Button type="Accept" text="Aprovar" press=".onApprovePress" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>